upstream hello_app_server {
  server unix:/home/willie/romanload/aliyun_conf/run/gunicorn.sock fail_timeout=0;
}

server {
    listen   80;
    server_name romanload.test;

client_max_body_size 4G;

access_log /home/willie/romanload/logs/nginx-access.log;
error_log /home/willie/romanload/logs/nginx-error.log;

location /static/ {
    alias   /home/willie/romanload/static/;
}

location /media/ {
    alias   /home/willie/romanload/media/;
}

location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    if (!-f $request_filename) {
        proxy_pass http://hello_app_server;
        break;
    }
}
